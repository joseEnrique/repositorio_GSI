	<types>
		<type name="asesoria:documento_cliente">
			<title>Documento de Cliente</title>
				<parent>cm:content</parent>				
					<!-- aspecto obligatorio -->			
			<mandatory-aspects>
				<aspect>asesoria:common</aspect>
				<aspect>cm:versionable</aspect>
				
			</mandatory-aspects>
		</type>

		<type name="asesoria:parte_trabajo">
			<title>Parte de trabajo</title>
			 <parent>cm:content</parent>
			
				<properties>
				<property name="asesoria:empleado_parte">

					<title>Empleado</title>

					<type>d:text</type>

					<mandatory>true</mandatory>

				</property>
				</properties>
				<!-- aspecto obligatorio -->			
			<mandatory-aspects>
				<aspect>asesoria:common</aspect>
				<aspect>cm:versionable</aspect>
				
			</mandatory-aspects>
		</type>
		<type name="asesoria:factura">
			<title>Factura</title>
			<parent>cm:content</parent>

			<properties>
				<property name="asesoria:empleado_parte">

					<title>Trimestre</title>

					<type>d:text</type>

					<mandatory>true</mandatory>

				</property>
				</properties>
				<!-- aspecto obligatorio -->			
			<mandatory-aspects>
				<aspect>asesoria:common</aspect>
				<aspect>cm:versionable</aspect>
				
			</mandatory-aspects>
		</type>

		<type name="asesoria:nomina">
			<title>NÃ³mina</title>
			<parent>cm:content</parent>
			
			
				<!-- aspecto obligatorio -->			
			<mandatory-aspects>
				<aspect>asesoria:common</aspect>
				<aspect>cm:versionable</aspect>
				
			</mandatory-aspects>
		</type>
		<!-- aqui van  otros tipos-> documentos -->
	</types>
	<aspects>
		<aspect name="asesoria:common">
			<title>Propiedades comunes</title>
			<properties>
				<!-- Topic -->
				<property name="asesoria:DNI">
					<title>DNI del cliente </title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<multiple>false</multiple>
					<index enabled="true">
			        	<atomic>true</atomic>
			            <stored>true</stored>
			            <tokenised>false</tokenised>
			        </index>
				</property>
			</properties>
		</aspect>

	</aspects>
</model>
